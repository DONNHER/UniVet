<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dff4eb">

    <!-- Status Bar (Time, Signal, Battery) -->
    <LinearLayout
        android:id="@+id/statusBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:21"
            android:textColor="#000000"
            android:background="#dff4eb"
            android:textSize="14sp"
            android:layout_weight="1"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/signal_icon"
            android:contentDescription="Signal strength"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/battery_icon"
            android:contentDescription="Battery level"/>
    </LinearLayout>

    <!-- Header with Back Button and Title -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#dff4eb"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/statusBar">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@null"
            android:src="@drawable/back_icon"
            android:contentDescription="Back"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Update Order"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <View
            android:layout_width="24dp"
            android:layout_height="24dp"/>
    </LinearLayout>

    <!-- Main Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#dff4eb"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Profile Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#dff4eb"
                android:orientation="horizontal"

                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/regis"
                    android:padding="5dp"
                    android:scaleType="fitCenter"
                    android:contentDescription="Customer profile"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp"
                    android:layout_gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ORDER# 0001"
                        android:textColor="#666666"
                        android:textSize="12sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Andre Louie Dulay"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="R-10 Lumbo, Valencia City Bukidnon"
                        android:textColor="#666666"
                        android:textSize="12sp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">

                <!-- Call User Button -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:layout_marginEnd="8dp">

                    <ImageButton
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/success"
                        android:background="@color/white"

                        android:padding="12dp"
                        android:contentDescription="Call user"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Order Confirmed"
                        android:textColor="#000000"
                        android:background="@drawable/green"
                        android:textSize="12sp"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <!-- Edit Button -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:layout_marginHorizontal="8dp">

                    <ImageButton
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/food"
                        android:background="@drawable/circle_green"
                        android:padding="12dp"
                        android:contentDescription="Edit order"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="To Deliver"
                        android:textColor="#000000"
                        android:background="@drawable/green"
                        android:textSize="12sp"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <!-- Details Button -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:layout_marginStart="8dp">

                    <ImageButton
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/home_green"
                        android:background="@drawable/circle_green"
                        android:padding="12dp"
                        android:contentDescription="View details" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Order Recieved"
                        android:textColor="#000000"
                        android:background="@drawable/grey"
                        android:textSize="12sp"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Order Checklist Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Order checklist"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000000"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="16dp"/>

            <!-- Checklist Items -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Mode of Payment (COD)"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:textStyle="italic"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/check_icon"
                    android:contentDescription="Checked" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Express delivery mode"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:textStyle="italic"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/check_icon"
                    android:contentDescription="Checked" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Additional notes:"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:textStyle="italic"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="N/A"
                    android:textColor="#000000"
                    android:textSize="14sp"/>
            </LinearLayout>

            <!-- Signature Line -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#AAAAAA"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Delivery Person"
                android:textColor="#666666"
                android:textSize="12sp"
                android:textAlignment="center"
                android:layout_marginBottom="40dp"/>

            <!-- Accept/Reject Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="60dp">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="BACK TO HOME"
                    android:textColor="#000000"
                    android:background="@drawable/green"
                    android:layout_marginEnd="8dp"/>


            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <GridLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:columnCount="3"
        android:rowCount="1"
        android:background="#000000"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/navHistory"
            android:layout_width="52dp"
            android:layout_height="49dp"
            android:src="@drawable/history"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_gravity="center"
            android:layout_columnWeight="1"
            android:contentDescription="History" />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_columnWeight="1"/>

        <ImageView
            android:id="@+id/navProfile"
            android:layout_width="52dp"
            android:layout_height="49dp"
            android:src="@drawable/profile"
            android:layout_column="2"
            android:layout_row="0"
            android:layout_gravity="center"
            android:layout_columnWeight="1"
            android:contentDescription="Profile" />
    </GridLayout>

    <!-- Center Button -->
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="30dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/yellow"
            android:contentDescription="Center action button"/>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>