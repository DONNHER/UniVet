<FrameLayout    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/adds"
        android:orientation="vertical"
        android:scrollbars="horizontal">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rowCount="2">

            <TextView
                android:id="@+id/Start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Code "
                android:textStyle="bold">

            </TextView>

            <TextView
                android:id="@+id/Start2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:background="@drawable/edit_background"
                android:paddingStart="5dp"
                android:paddingTop="0dp"
                android:paddingEnd="5dp"
                android:paddingBottom="0dp"
                android:text="FIRST 40"
                android:textColor="@color/black"
                android:textStyle="bold">

            </TextView>

            <TextView
                android:id="@+id/Start3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" at Checkout"
                android:textStyle="bold">

            </TextView>
        </GridLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/Start4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hurry, offer end soon!"
                android:textStyle="bold">

            </TextView>

        </LinearLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp">

            <TextView
                android:id="@+id/Start5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hurry_offer_end_soon"
                android:textSize="20dp"
                android:textStyle="bold">

            </TextView>


        </GridLayout>


    </LinearLayout>

    <ImageView
        android:id="@+id/pic"
        android:layout_width="129dp"
        android:layout_height="118dp"
        android:layout_gravity="end"
        android:layout_margin="5dp"
        android:src="@drawable/burger">

    </ImageView>

    <Button
        android:id="@+id/image_order"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_gravity="end|bottom"
        android:layout_margin="13dp"
        android:background="@drawable/black"
        android:text="ORDER NOW"
        android:textColor="@android:color/holo_green_dark">

    </Button>
</FrameLayout>