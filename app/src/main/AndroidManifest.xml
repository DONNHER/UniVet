<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/UniVet"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Uni"
        tools:targetApi="31">
        <activity
            android:name=".acts.main_act"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".acts.settingAct"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">
        </activity>
        <activity
            android:name=".acts.groomServiceAct"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar"
            android:launchMode="singleTop">
        </activity>
        <activity
            android:name=".acts.medServiceAct"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar"
            android:launchMode="singleTop">
        </activity>
        <activity
            android:name=".acts.productServiceAct"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar"
            android:launchMode="singleTop">
        </activity>
        <activity
            android:name=".acts.otherServiceAct"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar"
            android:launchMode="singleTop">
        </activity>
        <activity
            android:name=".acts.OwnerDashboardAct"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar"
            android:launchMode="singleTop">
        </activity>
        <activity
            android:name=".acts.ownerAct"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar"
            android:launchMode="singleTop">
        </activity>
        <activity
            android:name=".acts.appAct"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar"
            tools:ignore="Instantiatable"
            android:launchMode="singleTop">
        </activity>
    </application>

</manifest>