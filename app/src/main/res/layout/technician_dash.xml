<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/admin"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="406dp"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom|start"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        android:adjustViewBounds="true"
        android:src="@drawable/b3"
        >

    </ImageView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Top Greeting Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="86dp">

                    <Button
                        android:layout_marginTop="15dp"
                        android:layout_width="35dp"
                        android:layout_height="28dp"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:background="@drawable/sidemenu"
                        android:onClick="onMenuClick"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="106dp"
                        android:layout_height="60dp"
                        android:layout_row="0"
                        android:layout_column="3"
                        android:layout_gravity="right"
                        android:layout_marginEnd="12dp"
                        android:contentDescription="@string/dog_image"
                        android:src="@drawable/logo" />

                    <TextView
                        android:fontFamily="@font/poppins_semibold"
                        android:id="@+id/name"
                        android:layout_width="39dp"
                        android:layout_height="wrap_content"
                        android:layout_row="1"
                        android:layout_column="0"
                        android:text="Hi, "
                        android:textColor="#444444"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:layout_marginLeft="20dp"/>

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_row="1"
                        android:layout_column="3"
                        android:text="December 12, 1923"
                        android:textColor="#444444"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins_light"/>

                </GridLayout>


            </LinearLayout>
        </LinearLayout>

        <!-- Search Bar -->

        <!-- Services Grid -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:useDefaultMargins="true"
            android:layout_marginBottom="24dp">

            <!-- Grooming -->
            <LinearLayout

                android:layout_width="9dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:background="@drawable/border"
                android:orientation="vertical"
                android:padding="12dp"
                android:clickable="true"
                android:focusable="true"
                android:onClick="onServiceManageClick">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/user"
                    android:layout_gravity="left"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:text="Total Visitors"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/poppins_light"/>
            </LinearLayout>

            <!-- Boarding -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:background="@drawable/border"
                android:orientation="vertical"
                android:padding="12dp"
                android:clickable="true"
                android:focusable="true"
                android:onClick="onProductManageClick">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/pawprint"
                    android:layout_gravity="left"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:text="Total Pets"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/poppins_light"/>
            </LinearLayout>

            <!-- Dog Walking -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="113dp"
                android:layout_columnWeight="1"
                android:background="@drawable/border"
                android:orientation="vertical"
                android:padding="12dp"
                android:clickable="true"
                android:focusable="true"
                android:onClick="onManageClick">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/mdi_dog_service"
                    android:layout_gravity="left"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:text="Total Services"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/poppins_light"/>
            </LinearLayout>

            <!-- Pet Training -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="113dp"
                android:layout_columnWeight="1"
                android:background="@drawable/border"

                android:orientation="vertical"
                android:padding="12dp"
                android:clickable="true"
                android:focusable="true"
                android:onClick="onInventoryClick">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/products"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:text="Total Products"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/poppins_light"/>
            </LinearLayout>
        </GridLayout>

        <!-- Upcoming Appointments Section Title -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Upcoming Appointments Section Title -->
            <Button
                android:id="@+id/appointments"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_gravity="start"
                android:scrollbars="vertical"
                android:text="Upcoming Appointments"
                android:textColor="#000000"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_bold"
                android:textSize="14dp"/>


            <!-- Upcoming Appointments Section Title -->
            <Button
                android:id="@+id/appointments3"
                android:layout_width="175dp"
                android:layout_height="match_parent"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_gravity="end"
                android:scrollbars="vertical"
                android:text="Pending Appointments"
                android:textColor="#000000"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_bold"
                android:textSize="14dp"/>

        </GridLayout>
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/appointmentsView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="0"
                android:padding="16dp"
                android:scrollbars="vertical" />
        </GridLayout>
    </LinearLayout>

</FrameLayout>
