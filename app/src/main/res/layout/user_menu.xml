<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width= "270dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="0dp"
    android:layout_margin="0dp"
    android:background="@drawable/edit_background">


    <!--            android:drawableStart="@drawable/ic_user" -->

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="183dp"
        android:layout_height="78dp"
        app:srcCompat="@drawable/lo" />

    <GridLayout
        android:layout_marginTop="35dp"
        android:layout_width="280dp"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/icon5"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="25dp"
            android:autofillHints=""
            android:background="@drawable/settings"
            android:hint="name"
            android:padding="12dp"
            android:textAlignment="center" />

        <ImageView
            android:id="@+id/icon8"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="20dp"
            android:autofillHints=""
            android:background="@drawable/home"
            android:hint="name"
            android:padding="12dp"
            android:textAlignment="center" />

        <ImageView
            android:id="@+id/iconInventory"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="20dp"
            android:autofillHints=""
            android:background="@drawable/mdi_dog_service"
            android:hint="name"
            android:padding="12dp"
            android:textAlignment="center" />


        <ImageView
            android:id="@+id/icon6"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="20dp"
            android:autofillHints=""
            android:background="@drawable/maki_shop"
            android:hint="name"
            android:padding="12dp"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/userPetShop"
            android:layout_width="203dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/border"
            android:text="Pet Shop"
            android:textAlignment="textStart" />

        <TextView
            android:id="@+id/userProfile"
            android:layout_width="204dp"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/border"
            android:hint="Profile settings"
            android:textAlignment="textStart" />

        <TextView
            android:id="@+id/userBookService"
            android:layout_width="204dp"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/border"
            android:hint="Book Services"
            android:textAlignment="textStart" />

        <TextView
            android:id="@+id/user_dashB"
            android:layout_width="204dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/border"
            android:hint="Dashboard"
            android:paddingLeft="10dp"
            android:textAlignment="textStart" />

    </GridLayout>

    <!--            android:drawableStart="@drawable/ic_lock" -->
    <!--            android:drawableStart="@drawable/edittext_background" -->

    <!--            android:drawableStart="@drawable/ic_lock" -->
    <!--            android:drawableStart="@drawable/edittext_background" -->

</LinearLayout>
