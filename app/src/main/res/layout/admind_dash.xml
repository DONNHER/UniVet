<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/admin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Top Greeting Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="86dp">

                    <Button
                        android:layout_width="47dp"
                        android:layout_height="34dp"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:background="@drawable/sidemenu"
                        android:onClick="onBtnClick"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="106dp"
                        android:layout_height="60dp"
                        android:layout_row="0"
                        android:layout_column="3"
                        android:layout_gravity="right"
                        android:layout_marginEnd="12dp"
                        android:contentDescription="@string/dog_image"
                        android:src="@drawable/lo" />

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_row="1"
                        android:layout_column="0"
                        android:text="Hi, "
                        android:textColor="#444444"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_row="1"
                        android:layout_column="3"
                        android:text="December 12, 1923"
                        android:textColor="#444444"
                        android:textSize="14sp" />

                </GridLayout>


            </LinearLayout>
        </LinearLayout>

        <!-- Search Bar -->
        <EditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:autofillHints=""
            android:hint="@string/search"
            android:background="@drawable/edit_background"
            android:paddingStart="40dp"
            android:drawableStart="@android:drawable/ic_menu_search"
            android:drawablePadding="8dp"
            android:textColorHint="#888888"
            android:layout_marginBottom="24dp"
            tools:ignore="RtlSymmetry"
            android:singleLine="true"/>

        <!-- Services Grid -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:useDefaultMargins="true"
            android:layout_marginBottom="24dp">

            <!-- Grooming -->
            <LinearLayout

                android:layout_width="9dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:background="@drawable/edit_background"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="12dp"
                android:clickable="true"
                android:focusable="true"
                android:onClick="onGroomClick">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/logo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:text="Total Visitors"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Boarding -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:background="@drawable/edit_background"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="12dp"
                android:clickable="true"
                android:focusable="true"
                android:onClick="onMedClick">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/logo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:text="Total Pets"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Dog Walking -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="113dp"
                android:layout_columnWeight="1"
                android:background="@drawable/edit_background"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="12dp"
                android:clickable="true"
                android:focusable="true"
                android:onClick="onProductClick">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/logo"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:text="@string/products"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Pet Training -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="113dp"
                android:layout_columnWeight="1"
                android:background="@drawable/edit_background"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="12dp"
                android:clickable="true"
                android:focusable="true"
                android:onClick="onOtherClick">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:contentDescription="@string/todo"
                    android:src="@drawable/logo"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:text="@string/Other"
                    android:textStyle="bold" />
            </LinearLayout>
        </GridLayout>

        <!-- Upcoming Appointments Section Title -->
        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <!-- Upcoming Appointments Section Title -->
            <TextView
                android:id="@+id/appointments"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_gravity="center"
                android:scrollbars="vertical"
                android:text="Upcoming Appointments"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textStyle="bold" />


            <!-- Upcoming Appointments Section Title -->
            <TextView
                android:id="@+id/appointments3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_gravity="center"
                android:scrollbars="vertical"
                android:text="Pending Appointments"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"/>

        </GridLayout>
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/appointmentsView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="0"
                android:padding="16dp"
                android:scrollbars="vertical"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/appointmentsView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="0"
                android:padding="16dp"
                android:scrollbars="vertical"/>
        </GridLayout>
    </LinearLayout>

</LinearLayout>
