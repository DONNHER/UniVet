<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6D4B8"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <!-- Search Bar -->


        <!-- Services Grid -->

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:layout_gravity="center"
            android:layout_marginBottom="24dp"
            android:columnCount="4"
            android:padding="0dp"
            android:useDefaultMargins="false">


            <TextView
                android:layout_width="51dp"
                android:layout_height="25dp"
                android:layout_row="0"
                android:layout_column="1"
                android:background="@color/white"
                android:gravity="center"
                android:text="@string/login"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:onClick="onLogClick"/>

            <TextView
                android:layout_width="76dp"
                android:layout_height="25dp"
                android:layout_row="0"
                android:layout_column="2"
                android:background="@color/white"
                android:gravity="center"
                android:text="@string/register"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:onClick="onResClick"/>

            <Button
                android:layout_width="47dp"
                android:layout_height="25dp"
                android:layout_row="0"
                android:layout_column="3"
                android:background="@drawable/edit_background"
                android:textStyle="bold"
                android:onClick="onBtnClick"/>

        </GridLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="24dp"
            android:autofillHints=""
            android:background="@drawable/edit_background"
            android:drawableStart="@android:drawable/ic_menu_search"
            android:drawablePadding="8dp"
            android:hint="@string/search"
            android:paddingStart="40dp"
            android:textColorHint="#888888"
            tools:ignore="RtlSymmetry"
            android:singleLine="true"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:useDefaultMargins="true"
            android:layout_marginBottom="24dp">

            <!-- Grooming -->

            <!-- Boarding -->

            <LinearLayout
                android:id="@+id/grooming"
                android:layout_width="9dp"
                android:layout_height="154dp"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:background="@drawable/logo"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:onClick="onGroomClick"
                android:orientation="vertical"
                android:padding="12dp">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp" />
                <!--                android:src="@drawable/ic_grooming"-->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:text="Grooming Services"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="156dp"
                android:layout_columnWeight="1"
                android:background="@drawable/logo"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:onClick="onMedClick"
                android:orientation="vertical"
                android:padding="12dp">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp" />
                <!--                android:src="@drawable/ic_boarding"-->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:text="Medical Services"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Dog Walking -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="152dp"
                android:layout_columnWeight="1"
                android:background="@drawable/logo"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:onClick="onProductClick"
                android:orientation="vertical"
                android:padding="12dp">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp" />
                <!--                android:src="@drawable/ic_dog_walking"-->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:text="@string/products"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Pet Training -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="152dp"
                android:layout_columnWeight="1"
                android:background="@drawable/logo"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:onClick="onOtherClick"
                android:orientation="vertical"
                android:padding="12dp">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:contentDescription="@string/todo" />

                <!--                android:src="@drawable/ic_training"-->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:text="@string/Other"
                    android:textStyle="bold" />
            </LinearLayout>
        </GridLayout>

        <!-- Upcoming Appointments Section Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upcoming Appointments"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#000000" />

    </LinearLayout>

</ScrollView>
