<!-- Service Booking Dialog Layout -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="335dp"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:layout_gravity="center">

    <LinearLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/dialog_background"
        android:padding="16dp">

        <!-- Service Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/serviceName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Name"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/doctorImage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/logo" />
        </LinearLayout>

        <!-- Service Description -->
        <TextView
            android:id="@+id/serviceDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Description"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <!-- Price Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/num_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚±"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/price9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="0.0"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Patient Information -->
        <EditText
            android:id="@+id/namePatient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Patient name:"
            android:background="@drawable/edit_background"
            android:padding="12dp"
            android:singleLine="true"/>

        <!-- Date Selection -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical"
            android:background="@drawable/border">

            <EditText
                android:id="@+id/editTextMonth"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="MM"
                android:inputType="number"
                android:maxLength="2"
                android:textSize="14sp"/>

            <EditText
                android:id="@+id/editTextDay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="DD"
                android:inputType="number"
                android:maxLength="2"
                android:textSize="14sp"/>

            <EditText
                android:id="@+id/editTextYear"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="YYYY"
                android:inputType="number"
                android:maxLength="4"
                android:textSize="14sp"/>

            <ImageView
                android:id="@+id/imageViewCalendar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="Calendar icon"
                android:padding="8dp"
                android:src="@android:drawable/ic_menu_my_calendar"
                android:background="@drawable/border"/>
        </LinearLayout>

        <!-- Time Slots Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Morning Slots (8:00 AM - 12:00 PM)"
            android:textColor="@color/black"
            android:textSize="14sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Evening Slots (1:00 PM - 4:00 PM)"
            android:textColor="@color/black"
            android:textSize="14sp"/>

        <!-- Time Selection -->
        <LinearLayout
            android:id="@+id/eveSlots"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical"
            android:background="@drawable/edit_background"
            android:padding="8dp">

            <TextView
                android:id="@+id/time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Click to select Time"
                android:textSize="14sp"/>

            <ImageView
                android:id="@+id/imageViewTime"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="Select Time"
                android:src="@drawable/settings"/>
        </LinearLayout>

        <!-- Submit Button -->
        <Button
            android:id="@+id/scheduleButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/black"
            android:text="SUBMIT"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp"/>
    </LinearLayout>
</ScrollView>