<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/admin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Top Greeting Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:layout_width="35dp"
                        android:layout_height="28dp"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/sidemenu"
                        android:onClick="sideMenu"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="106dp"
                        android:layout_height="60dp"
                        android:layout_row="1"
                        android:layout_column="1"
                        android:layout_gravity="right"
                        android:layout_marginEnd="12dp"
                        android:contentDescription="@string/dog_image"
                        android:src="@drawable/lo" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_row="0"
                        android:layout_column="2"
                        android:text="December 12, 1923"
                        android:textColor="#444444"
                        android:textSize="14sp" />

                </GridLayout>


            </LinearLayout>
        </LinearLayout>

        <!-- Search Bar -->

        <!-- Services Grid -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:useDefaultMargins="true"
            android:layout_marginBottom="24dp"/>

        <!-- Upcoming Appointments Section Title -->
        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <!-- Upcoming Appointments Section Title -->
            <TextView
                android:id="@+id/appointments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_gravity="center"
                android:scrollbars="vertical"
                android:text="Upcoming Appointments"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"/>


            <!-- Upcoming Appointments Section Title -->
            <TextView
                android:id="@+id/appointments3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_gravity="center"
                android:scrollbars="vertical"
                android:text="Pending Appointments"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"/>

        </GridLayout>
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/appointmentsView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="0"
                android:padding="16dp"
                android:scrollbars="vertical"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/appointmentsView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="0"
                android:padding="16dp"
                android:scrollbars="vertical"/>
        </GridLayout>
    </LinearLayout>

</LinearLayout>
